<%- include header %>
<div class="bg-reg clear">
<div class="container" id="reg-part">
<form method="post">
		<label for="name" class="col-sm-3"><span class="text-fill">*</span>用户名：</label>
		<div class="col-sm-9 form-group">
			<input type="text" class="form-control" id="name" name="name" />
		</div>
		<label for="password" class="col-sm-3"><span class="text-fill">*</span>密码：</label>
		<div class="col-sm-9 form-group">
			<input type="password" class="form-control" id="password" name="password" />
		</div>
		<label for="password-repeat" class="col-sm-3"><span class="text-fill">*</span>确认密码：</label>
		<div class="col-sm-9 form-group">
			<input type="password" class="form-control" id="password-repeat" name="password-repeat" />
		</div>
		<label for="email" class="col-sm-3"><span class="text-fill">*</span>邮箱：</label>
		<div class="col-sm-9 form-group">
			<input type="email" class="form-control" id="email" name="email" />
		</div>
		<% if (error) { %>
		  <div class="alert alert-danger alert-dismissable col-sm-12"> <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><%= error %> </div>
		<% } %>
		<input type="submit" id="submit-reg" class="btn btn-success" value="注册" />
</form>
</div>
</div>
<%- include footer %>